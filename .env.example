# IntelligentSPM Environment Variables
# Copy to .env.local and fill in values

# =============================================================================
# DATABASE (Neon PostgreSQL via Vercel)
# =============================================================================

# Neon connection string with pooler (for app runtime)
DATABASE_URL=postgresql://username:password@ep-xxx-pooler.region.aws.neon.tech/neondb?sslmode=require&schema=intelligentspm

# Direct connection (for migrations only, bypasses pooler)
DATABASE_URL_DIRECT=postgresql://username:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require&schema=intelligentspm

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================

# Site URL (for OAuth callbacks)
NEXTAUTH_URL=http://localhost:3000

# Secret for JWT signing (generate: openssl rand -base64 32)
NEXTAUTH_SECRET=your-secret-here

# LinkedIn OAuth (https://www.linkedin.com/developers/apps)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# =============================================================================
# EMAIL (Resend - already configured)
# =============================================================================

RESEND_API_KEY=re_xxxxxxxxxxxxx
RESEND_WAITLIST_AUDIENCE_ID=aud_xxxxxxxxxxxxx
RESEND_SYNDICATE_AUDIENCE_ID=aud_xxxxxxxxxxxxx

# =============================================================================
# APP CONFIG
# =============================================================================

# Site URL for links in emails
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Node environment
NODE_ENV=development
